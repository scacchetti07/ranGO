<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MarketProject.ViewModels"
        xmlns:scr="clr-namespace:MarketProject.Views"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="MarketProject.Views.HomeView"
        Title="Tela Inicial - ranGO!"
        Icon="/Assets/rango_icon.ico"
        WindowState="Maximized"
        ExtendClientAreaToDecorationsHint="True"
        FontFamily="{StaticResource FilsonPro}"
        x:DataType="vm:HomeViewModel">
            <Grid ColumnDefinitions="Auto,*">
            <Border BoxShadow="7 0 40 0 #1A3374B9" Width="339" Height="1072" HorizontalAlignment="Left">
            <Rectangle Fill="#3374B9" Width="5" HorizontalAlignment="Right"/>    
            </Border>
                <StackPanel Grid.Column="0" Orientation="Vertical" Width="339" Height="1072" HorizontalAlignment="Left" Spacing="15">
                    <Image Source="{Binding CurrentLogoTheme}" Width="220" Height="86" Margin="0 50 0 0"/>
                    <Border Background="#883374B9" Height="5" Width="250" CornerRadius="5" Margin="0 0 0 90"/>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Name="Options" Classes="tabBar">
                        <Button Click="btnDashboard">
                            <StackPanel Orientation="Horizontal">
                                 <Image Source="{SvgImage /Assets/Icons/SVG/IconDashboard.svg}" />
                                 <Label Content="Dashboard"/>
                             </StackPanel>
                        </Button>
                            <Button Click="btnStorage">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{SvgImage /Assets/Icons/SVG/IconStorage.svg}"/>
                                    <Label Content="Estoque"/>
                                </StackPanel>
                            </Button>
                        <Button Click="BtnSupply">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{SvgImage /Assets/Icons/SVG/IconSupply.svg}"/>
                                <Label Content="Fornecedor"/>
                            </StackPanel> 
                        </Button>
                        <Button Click="btnOrder">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{SvgImage /Assets/Icons/SVG/IconMenu.svg}"/>
                                <Label Content="Pedidos"/>
                            </StackPanel>
                        </Button>
                        <!-- <Button Click="btnGrp"> -->
                        <!--     <StackPanel Orientation="Horizontal"> -->
                        <!--         <Image Source="{SvgImage /Assets/Icons/SVG/IconAdmin.svg}"/> -->
                        <!--         <Label Content="Gerência"/> -->
                        <!--     </StackPanel> -->
                        <!-- </Button> -->
                        <Border Background="#883374B9" Height="5" Width="250" CornerRadius="5" Margin="0 100 0 125"/>
                        
                        <StackPanel>
                            <Button Click="btnSettings">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{SvgImage /Assets/Icons/SVG/IconSettings.svg}"/>
                                    <Label Content="Opções"/>
                                </StackPanel>
                            </Button>
                            <Button Click="btnExit">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{SvgImage /Assets/Icons/SVG/IconExit.svg}"/>
                                    <Label Content="Sair"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>  
                </StackPanel>
            
            <Carousel Grid.Column="1" VerticalAlignment="Center" Name="TabGeral">
                
                <Carousel.PageTransition>
                    <!-- Animação da Transição de Telas -->
                    <CompositePageTransition> 
                        <CrossFade FadeInEasing="CubicEaseIn" FadeOutEasing="CubicEaseOut" Duration="0:00:00.350"></CrossFade>
                    </CompositePageTransition>
                </Carousel.PageTransition>
                <Carousel.Items>
                    <!-- Home Screen -->
                    <Image Source="/Assets/HomeScreenLogo.png" VerticalAlignment="Stretch" Width="288" Opacity="0.1" IsVisible="true"/>
                    <!-- Dashboard Screen -->
                    <Rectangle Fill="Red" Height="500" Width="500"/>
                    <!-- Storage Screen -->
                    <Carousel Name="TabStorage">
                        <Carousel.PageTransition>
                            <CompositePageTransition>
                                <CrossFade FadeInEasing="CubicEaseIn" FadeOutEasing="CubicEaseOut" Duration="0:00:00.350"></CrossFade>
                            </CompositePageTransition>
                        </Carousel.PageTransition>
                        
                    
                        <Carousel.Items>
                            <!-- Implementação do Storage View -->
                            <!-- <scr:StorageView Name="strView" x:CompileBindings="False" Products="{Binding $parent[scr:HomeView].DataContext.Database.Products}" ActionChanged="StorageView_OnActionChanged" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/> -->
                            <scr:StorageView HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </Carousel.Items>
                    </Carousel>
                    <!-- Supply Screen -->
                    <Rectangle Fill="Red" Height="500" Width="500"/>
                    <!-- Orders Screen -->
                    <Rectangle Fill="Red" Height="500" Width="500"/>
                    <!-- Option Screen -->
                    <scr:OptionsView HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></scr:OptionsView>
                </Carousel.Items>
                

            </Carousel>
        </Grid>
</Window>
